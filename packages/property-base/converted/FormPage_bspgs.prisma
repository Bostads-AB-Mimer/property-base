model FormPage {
  @@map("bspgs")

  // Fields
  id String @id(map: "pkbspgs") @map("keybspgs") @db.Char(15)
  formDefinitionId String? @map("keybsdef") @db.Char(15)
  reportLayoutId1 String? @map("keycmfrx") @db.Char(15) // Mapping to keycmfrx, layout may refer to some kind of report
  reportLayoutId2 String? @map("keycmrpl") @db.Char(15) // Mapping to keycmrpl, another report-related ID
  pageNumber Int? @map("pagenr")
  pageName String? @map("pagename") @db.VarChar(30) // Name of the page
  copyCount Int @map("copies") @db.TinyInt // Number of copies
  timestamp String @map("timestamp") @db.Char(10) // TODO: change timestamp later when knowing more about its usage 

  // Relations
  reportLayout ReportLayout? @relation(fields: [reportLayoutId2], references: [reportLayoutId], onDelete: Cascade, onUpdate: NoAction, map: "fkbspgskeycmrpl")

  @@index([formDefinitionId], map: "fkbspgsbsdef")
  @@index([reportLayoutId1], map: "fkbspgscmfrx")
  @@index([reportLayoutId2], map: "fkbspgscmrpl")
}