model ProductLink {
  @@map("puprk")
  
  productLinkId String @id(map: "pkpuprk") @map("keypuprk") @db.Char(15)
  maintenanceActionGroupId String? @map("keypuagr") @db.Char(15) // Linked to MaintenanceActionGroup
  productId String? @map("keypuprd") @db.Char(15) // Linked to Product
  timestamp String @map("timestamp") @db.Char(10) // TODO: Consider renaming 'timestamp' later

  maintenanceActionGroup MaintenanceActionGroup? @relation(fields: [maintenanceActionGroupId], references: [maintenanceActionGroupId], onDelete: Cascade, onUpdate: NoAction, map: "fkpuprkkeypuagr")
  product Product? @relation(fields: [productId], references: [productId], onDelete: Cascade, onUpdate: NoAction, map: "fkpuprkkeypuprd")

  @@index([maintenanceActionGroupId], map: "fkpuprkpuagr")
  @@index([productId], map: "fkpuprkpuprd")
}