model MaintenancePackageContent {
  @@map("skpin")

  // Fields
  packageContentId String @id(map: "pkskpin") @map("keyskpin") @db.Char(15)
  packageId String @map("keyskpkt") @db.Char(15)
  actionId String @map("keyskatg") @db.Char(15)
  professionCategoryId String? @map("keyskyrk") @db.Char(15)
  weekTemplateId String? @map("keyskdmv") @db.Char(15)
  dayTemplateId String? @map("keyskdmd") @db.Char(15)
  measurementTypeId String? @map("keycmvat") @db.Char(15)
  amount Decimal @map("mangd") @db.Decimal(9, 1)
  priority Int @default(0, map: "DF__skpin__prioritet__3BFD39F2") @map("prioritet") @db.TinyInt
  timestamp String @map("timestamp") @db.Char(10) // TODO: change timestamp later when knowing more about its usage

  // Relations
  measurementType MeasurementType? @relation(fields: [measurementTypeId], references: [measurementTypeId], onUpdate: NoAction, map: "fkskpinkeycmvat")
  maintenanceAction MaintenanceAction @relation(fields: [actionId], references: [actionId], onUpdate: NoAction, map: "fkskpinkeyskatg")
  dayTemplate DayTemplate? @relation(fields: [dayTemplateId], references: [dayTemplateId], onDelete: NoAction, onUpdate: NoAction, map: "fkskpinkeyskdmd")
  weekTemplate WeekTemplate? @relation(fields: [weekTemplateId], references: [weekTemplateId], onDelete: NoAction, onUpdate: NoAction, map: "fkskpinkeyskdmv")
  maintenancePackage MaintenancePackage @relation(fields: [packageId], references: [packageId], onDelete: Cascade, onUpdate: NoAction, map: "fkskpinkeyskpkt")
  professionCategory ProfessionCategory? @relation(fields: [professionCategoryId], references: [professionCategoryId], onDelete: NoAction, onUpdate: NoAction, map: "fkskpinkeyskyrk")

  // Indexes
  @@index([measurementTypeId], map: "fkskpincmvat")
  @@index([actionId], map: "fkskpinskatg")
  @@index([dayTemplateId], map: "fkskpinskdmd")
  @@index([weekTemplateId], map: "fkskpinskdmv")
  @@index([packageId], map: "fkskpinskpkt")
  @@index([professionCategoryId], map: "fkskpinskyrk")
}