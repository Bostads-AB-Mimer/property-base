model IssueConstructionLink {
  @@map("aobdt")

  // Fields
  id String @id(map: "pkaobdt") @map("keyaobdt") @db.Char(15)
  constructionPartId String @map("keyaobdl") @db.Char(15)
  issueNoteId String @map("keylbant") @db.Char(15)
  timestamp String @map("timestamp") @db.Char(10) // TODO: Consider renaming with specific context when it becomes clear

  // Relations
  aobdl Aobdl @relation(fields: [constructionPartId], references: [keyaobdl], onDelete: Cascade, onUpdate: NoAction, map: "fkaobdtkeyaobdl") // TODO: Replace Aobdl when new model name is known
  lbant Lbant @relation(fields: [issueNoteId], references: [keylbant], onDelete: Cascade, onUpdate: NoAction, map: "fkaobdtkeylbant") // TODO: Replace Lbant when new model name is known

  @@unique([constructionPartId, issueNoteId], map: "akaobdt1")
  @@index([constructionPartId], map: "fkaobdtaobdl")
  @@index([issueNoteId], map: "fkaobdtlbant")
}