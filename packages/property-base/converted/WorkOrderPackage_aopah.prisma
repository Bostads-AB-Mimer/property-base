model WorkOrderPackage {
  @@map("aopah")
  
  workOrderPackageId String @id(map: "pkaopah") @map("keyaopah") @db.Char(15)
  name String @unique(map: "akaopah1") @map("caption") @db.VarChar(60)
  description String @map("descript") @db.VarChar(600)
  timestamp String @map("timestamp") @db.Char(10) // TODO: change timestamp later when knowing more about its usage 

  workOrderCategories WorkOrderCategory[] @relation("fkaokatkeyaopah") // Updated to new model name for 'aokat'
  workOrderRows WorkOrderRow[] @relation("fkaoparkeyaopah") // Updated to new model name for 'aopar'
}