model InspectionProtocolPlacementConnection {
  @@map("lbpla")

  // Fields
  id String @id(map: "pklbpla") @map("keylbpla") @db.Char(15)
  inspectionProtocolId String @map("keylbpro") @db.Char(15)
  placementId String @map("keyaopla") @db.Char(15)
  alwaysInclude Int @default(0, map: "DF__lbpla__incalways__77BD1E3E") @map("incalways") @db.TinyInt
  printOrder Int @default(0, map: "DF__lbpla__sortorder__78B14277") @map("sortorder") @db.TinyInt
  timestamp String @map("timestamp") @db.Char(10) // TODO: verify timestamp usage later

  // Relations
  aopla aopla @relation(fields: [placementId], references: [keyaopla], onDelete: Cascade, onUpdate: NoAction, map: "fklbplakeyaopla")
  inspectionProtocol InspectionProtocol @relation(fields: [inspectionProtocolId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fklbplakeylbpro") // assuming 'lbpro' -> 'InspectionProtocol', update once new name is certain

  @@unique([inspectionProtocolId, placementId], map: "aklbpla1")
  @@unique([inspectionProtocolId, printOrder], map: "aklbpla2")
  @@index([placementId], map: "fklbplaaopla")
  @@index([inspectionProtocolId], map: "fklbplalbpro")
}