model ReportColumn {
  @@map("cmrdc")

  reportColumnId  String   @id(map: "pkcmrdc") @map("keycmrdc") @db.Char(15)
  reportRowId     String   @map("keycmrdr") @db.Char(15)
  selectionId     String?  @map("keycmqry") @db.Char(15)
  reportId        Int      @map("id") @default(0, map: "DF__cmrdc__id__268DE717")
  typeId          Int      @map("type") @default(0, map: "DF__cmrdc__type__27820B50")
  subTypeCode     String?  @map("keycode") @db.Char(15)
  title           String?  @map("caption") @db.VarChar(50)
  sortOrder       Int      @map("sortorder") @default(0, map: "DF__cmrdc__sortorder__28762F89")
  decimalCount    Int      @map("decimals") @default(0, map: "DF__cmrdc__decimals__296A53C2") @db.TinyInt
  thousandSeparator Int   @map("digitgroup") @default(0, map: "DF__cmrdc__digitgrou__2A5E77FB") @db.TinyInt
  backgroundColor Int      @map("bcolor") @default(0, map: "DF__cmrdc__bcolor__2B529C34")
  foregroundColor Int      @map("fcolor") @default(0, map: "DF__cmrdc__fcolor__2C46C06D")
  textAlignment   Int      @map("textalign") @default(0, map: "DF__cmrdc__textalign__2D3AE4A6")
  fontName        String   @map("fontname") @db.VarChar(50)
  fontStyle       Int      @map("fontstyle") @default(0, map: "DF__cmrdc__fontstyle__2E2F08DF")
  fontSize        Int      @map("fontsize") @default(0, map: "DF__cmrdc__fontsize__2F232D18")
  isVisible       Int      @map("visible") @default(0, map: "DF__cmrdc__visible__30175151") @db.TinyInt
  formula         String?  @map("formula") @db.VarChar(Max)
  timestamp       String   @map("timestamp") @db.Char(10) // TODO: change timestamp later when knowing more about its usage 

  cmqry           cmqry?   @relation(fields: [selectionId], references: [keycmqry], onUpdate: NoAction, onDelete: NoAction, map: "fkcmrdckeycmqry")
  cmrdr           cmrdr    @relation(fields: [reportRowId], references: [keycmrdr], onDelete: NoAction, onUpdate: NoAction, map: "fkcmrdckeycmrdr")

  @@index([selectionId], map: "fkcmrdccmqry")
  @@index([reportRowId], map: "fkcmrdccmrdr")
}