model PriceListRow {
  @@map("lbplr")
  
  priceListRowId String @id(map: "pklbplr") @map("keylbplr") @db.Char(15)
  priceListId String @map("keylbplh") @db.Char(15)
  unitId String? @map("keycmuni") @db.Char(15)
  articleId String? @map("keycmart") @db.Char(15)
  code String @map("code") @db.VarChar(15)
  name String? @map("caption") @db.VarChar(70)
  priceAmount Float @default(0, map: "DF__lbplr__price__4009AB28") @map("price") @db.Money
  timestamp String @map("timestamp") @db.Char(10) // TODO: consider changing timestamp later if its usage becomes clearer
  
  // Relations
  inspectionRemark InspectionRemark[] // TODO: rename lbanm once the new model name is decided
  article Article? @relation(fields: [articleId], references: [articleId], onDelete: NoAction, onUpdate: NoAction, map: "fklbplrkeycmart")
  unit Unit? @relation(fields: [unitId], references: [unitId], onDelete: NoAction, onUpdate: NoAction, map: "fklbplrkeycmuni")
  priceList lbplh @relation(fields: [priceListId], references: [keylbplh], onUpdate: NoAction, map: "fklbplrkeylbplh") // TODO: rename lbplh once the new model name is decided

  @@unique([priceListId, code], map: "aklbplr1")
  @@index([articleId], map: "fklbplrcmart")
  @@index([unitId], map: "fklbplrcmuni")
  @@index([priceListId], map: "fklbplrlbplh")
}