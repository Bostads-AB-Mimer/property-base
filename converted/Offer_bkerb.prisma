model Offer {
  @@map("bkerb")

  offerId String @id(map: "pkbkerb") @map("keybkerb") @db.Char(15)
  responseCodeId String? @map("keybksva") @db.Char(15) // TODO: change when new model names are available
  originalResponseCodeId String? @map("keybksva2") @db.Char(15)
  applicationId String? @map("keybkans") @db.Char(15)
  lettingRoundId String @map("keybkero") @db.Char(15)
  applicantId String? @map("keycmctc") @db.Char(15) // TODO: change when new model names are available
  coApplicantId String? @map("keycmctc2") @db.Char(15) // TODO: change when new model names are available
  contractId String? @map("keyhyobj") @db.Char(15) // TODO: change when new model names are available
  displayId String? @map("keyhydsp") @db.Char(15) // TODO: change when new model names are available
  responseReasonId String? @map("keybkrrn") @db.Char(15) // TODO: change when new model names are available
  offerCode String @map("bkerbkod") @db.VarChar(30)
  printDate DateTime? @map("utskrivdat") @db.DateTime
  printDestination Int @default(0, map: "DF__bkerb__utskrdest__4FB6030C") @map("utskrdest") @db.TinyInt
  responseDate DateTime? @map("svarsdatum") @db.DateTime
  responseReminderDate DateTime? @map("ansremdat") @db.DateTime
  displayReminderDate DateTime? @map("dispremdat") @db.DateTime
  order Int @map("ordning") @db.TinyInt
  createdBy String @map("erbsign") @db.VarChar(80)
  customerControl Int @default(0, map: "DF__bkerb__utslag__50AA2745") @map("utslag") @db.TinyInt
  responseSignature String? @map("svasign") @db.VarChar(80)
  queuePoints Decimal? @map("quepoints") @db.Decimal(28, 0)
  timestamp String @map("timestamp") @db.Char(10) // TODO: change timestamp later when knowing more about its usage

  bkalt bkalt[] // TODO: change bkalt to new model names when available
  responseCode ResponseCode? @relation(fields: [keybksva2], references: [responseCodeId], onDelete: NoAction, onUpdate: NoAction, map: "fkbkerbkeybksva2")
  display Display? @relation(fields: [keyhydsp], references: [displayId], onDelete: NoAction, onUpdate: NoAction, map: "fkbkerbkeyhydsp")

  @@index([applicationId], map: "fkbkerbbkans")
  @@index([lettingRoundId], map: "fkbkerbbkero")
  @@index([responseCodeId], map: "fkbkerbbksva")
  @@index([originalResponseCodeId], map: "fkbkerbbksva2")
  @@index([applicantId], map: "fkbkerbcmctc")
  @@index([coApplicantId], map: "fkbkerbcmctc2")
  @@index([displayId], map: "fkbkerbhydsp")
  @@index([contractId], map: "fkbkerbhyobj")
  @@index([applicantId, offerId, lettingRoundId, customerControl], map: "inbkerb1")
  @@index([responseCodeId, applicantId, offerId, lettingRoundId], map: "inbkerb2")
}