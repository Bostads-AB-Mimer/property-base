model ReportBatchRow {
  @@map("cmrbr")
  
  reportBatchRowId String @id(map: "pkcmrbr") @map("keycmrbr") @db.Char(15)
  selectionId String @map("keycmqry") @db.Char(15)
  reportLayoutId String? @map("keycmrpl") @db.Char(15) // TODO: Confirm report layout model name
  layoutTemplateId String? @map("keycmfrx") @db.Char(15) // TODO: Confirm layout template model name
  reportId String @map("keycmrpt") @db.Char(15)
  reportDataId String @map("keycmrbh") @db.Char(15)
  description String @map("caption") @db.VarChar(250)
  order Int @default(0, map: "DF__cmrbr__rbrorder__1CD3C706") @map("rbrorder")
  destination Int @default(1, map: "DF__cmrbr__rbrdest__1DC7EB3F") @map("rbrdest")
  setting String @map("rbrconfig") @db.VarChar(Max)
  timestamp String @map("timestamp") @db.Char(10) // TODO: change timestamp later when knowing more about its usage

  selection Selection @relation(fields: [selectionId], references: [keycmqry], onUpdate: NoAction, map: "fkcmrbrkeycmqry")
  reportData ReportData @relation(fields: [reportDataId], references: [keycmrbh], onDelete: Cascade, onUpdate: NoAction, map: "fkcmrbrkeycmrbh")
  reportLayout ReportLayout? @relation(fields: [reportLayoutId], references: [keycmrpl], onUpdate: NoAction, map: "fkcmrbrkeycmrpl")
  report Report @relation(fields: [reportId], references: [keycmrpt], onUpdate: NoAction, map: "fkcmrbrkeycmrpt")
  logEvent LogEvent[] @relation("fkcmrpekeycmrbr")

  @@index([layoutTemplateId], map: "fkcmrbrcmfrx")
  @@index([selectionId], map: "fkcmrbrcmqry")
  @@index([reportDataId], map: "fkcmrbrcmrbh")
  @@index([reportId], map: "fkcmrbrcmrpt")
}