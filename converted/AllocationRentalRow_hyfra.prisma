model AllocationRentalRow {
  @@map("hyfra")
  
  allocationRentalRowId String @id(map: "pkhyfra") @map("keyhyfra") @db.Char(15)
  rentalRowId String @map("keyhyrad") @db.Char(15) // Based on previous conversion "RentalRow"
  rentalArticleId String @map("keycmart") @db.Char(15) // Consistent with previous conversion "Hyresartikel"
  contractId String @map("keyhyobj") @db.Char(15) // Based on the domain reference "Kontrakt"
  rentalObjectId String @map("keycmobj") @db.Char(15) // Based on the domain reference "Hyresobjekt"
  annualRentAmount Float @map("akthyratot") @db.Money // Based on the domain reference "Ã…rshyra"
  vatPercentage Decimal @map("momsproc") @db.Decimal(7, 2) // Renamed for clarity to "vatPercentage"
  timestamp String @map("timestamp") @db.Char(10) // TODO: Verify usage of timestamp

  rentalArticle cmart @relation(fields: [rentalArticleId], references: [keycmart], onUpdate: NoAction, map: "fkhyfrakeycmart")
  rentalRow hyrad @relation(fields: [rentalRowId], references: [keyhyrad], onDelete: Cascade, onUpdate: NoAction, map: "fkhyfrakeyhyrad")
  
  // TODO: Rename the relations to new model names when available
  // cmart  // Existing, needs review of the new name
  // hyrad  // Existing, needs review of the new name
  
  @@unique([rentalRowId, rentalObjectId], map: "akhyfra1")
  @@index([rentalArticleId], map: "fkhyfracmart")
  @@index([rentalObjectId], map: "fkhyfracmobj")
  @@index([contractId], map: "fkhyfrahyobj")
  @@index([rentalRowId], map: "fkhyfrahyrad")
}