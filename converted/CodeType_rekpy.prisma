model CodeType {
  @@map("rekpy")

  codeTypeId String @id(map: "pkrekpy") @map("keyrekpy") @db.Char(15)
  codeTypeCategoryId String? @map("keyrektk") @db.Char(15)
  year Int @map("year") @db.SmallInt
  codeType Int @map("type") @db.SmallInt
  name String @map("name") @db.VarChar(50)
  percentageShare Decimal @map("prcnt") @db.Decimal(13, 10)
  priority Int? @map("prio") @db.SmallInt
  systemStandard Int @default(0, map: "DF__rekpy__repabkod__4D306568") @map("repabkod") @db.TinyInt
  timestamp String @map("timestamp") @db.Char(10) // TODO: change timestamp later when knowing more about its usage

  codeTypeCategory CodeTypeCategory? @relation(fields: [codeTypeCategoryId], references: [codeTypeCategoryId], onDelete: NoAction, onUpdate: NoAction, map: "fkrekpykeyrektk ")
  ledgerRows LedgerRow[] @relation("fkrevrrkeyrekpy")

  @@unique([codeType, year], map: "akrekpy")
  @@index([codeTypeCategoryId], map: "fkrekpyrektk")
}