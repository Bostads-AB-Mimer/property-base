model TypTextTemplate {
  @@map("cmtep")

  typTextTemplateId String @id(map: "pkcmtep") @map("keycmtep") @db.Char(15)
  categoryId String @map("keycmtyp") @db.Char(15)
  textTypeGroupId String? @map("keycmteg") @db.Char(15)
  tableId String? @map("keydbtbl") @db.Char(15)
  freeTextListId String? @map("keycmttt") @db.Char(15)
  name String @map("caption") @db.VarChar(80)
  textLength Int? @map("textlen") @db.TinyInt
  lookup Int @default(0, map: "DF__cmtep__lookup__0A40E0D6") @map("lookup") @db.TinyInt
  inputType Int @default(0, map: "DF__cmtep__inputtype__0B35050F") @map("inputtype") @db.TinyInt
  printSort Int @default(0, map: "DF__cmtep__printsort__0C292948") @map("printsort") @db.TinyInt
  timestamp String @map("timestamp") @db.Char(10)

  // TODO: Rename batep to FieldSearch when available
  // FieldSearch fieldSearch?

  // Updated to use the new category model name
  category cmtyp @relation(fields: [categoryId], references: [keycmtyp], onDelete: Cascade, onUpdate: NoAction, map: "fkcmtepkeycmtyp")

  // TODO: Rename cmtex to TypText when available
  // TypText typText[]

  @@unique([categoryId, name], map: "akcmtep")
  @@index([freeTextListId], map: "fkcmtepcmttt")
}