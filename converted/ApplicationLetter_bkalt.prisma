model ApplicationLetter {
  @@map("bkalt")
  
  applicationLetterId String @id(map: "pkbkalt") @map("keybkalt") @db.Char(15)
  contactId String @map("keycmctc") @db.Char(15)
  offerId String? @map("keybkerb") @db.Char(15)
  propertyObjectId String @map("keycmobj") @db.Char(15) // TODO: may need renaming based on domain
  messageType Int @map("lettertype") @db.TinyInt
  sentDate DateTime @map("senddate") @db.DateTime
  timestamp String @map("timestamp") @db.Char(10) // TODO: Confirm if 'timestamp' needs a different naming convention or purpose

  offer Offer? @relation(fields: [keybkerb], references: [offerId], onDelete: NoAction, onUpdate: NoAction, map: "fkbkaltkeybkerb")
  contact Contact @relation(fields: [keycmctc], references: [contactId], onDelete: Cascade, onUpdate: NoAction, map: "fkbkaltkeycmctc")
  propertyObject cmobj @relation(fields: [keycmobj], references: [keycmobj], onUpdate: NoAction, map: "fkbkaltkeycmobj") // TODO: change cmobj to a new model name when available

  @@index([offerId], map: "fkbkaltbkerb")
  @@index([contactId], map: "fkbkaltcmctc")
  @@index([propertyObjectId], map: "fkbkaltcmobj")
}