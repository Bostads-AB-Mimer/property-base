model Item {
  @@map("tvart")
  
  itemId String @id(map: "pktvart") @map("keytvart") @db.Char(15)
  productId String @map("keytvprd") @db.Char(15)
  name String? @map("caption") @db.VarChar(30)
  supplierArticleNo String @map("suppartno") @db.VarChar(30)
  rskNumber String? @map("rskno") @db.VarChar(10)
  fromDate DateTime? @map("fdate") @db.Date
  toDate DateTime? @map("tdate") @db.Date
  timestamp String @map("timestamp") @db.Char(10) // TODO: consider changing timestamp later if its usage becomes clearer

  // Relations
  // component Component[] // TODO: update this relation with the new model name when available
  product Product @relation(fields: [productId], references: [productId], onDelete: Cascade, onUpdate: NoAction, map: "fktvartkeytvprd")
  
  // TODO: reconsider relation names once related model names become available
  // tvpin_tvpin_keytvartTotvart tvpin[] @relation("tvpin_keytvartTotvart")
  // tvpin_tvpin_keytvart2Totvart tvpin[] @relation("tvpin_keytvart2Totvart")
  cartRows CartRow[] @relation("fktvscrkeytvart")

  @@unique([productId, name], map: "aktvart1")
  @@index([productId], map: "fktvarttvprd")
}